<% name ||= "Create" %>
<h2><%= name %> articulo</h2>
<%= form_for(@article) do |f| %>
    <div class="form-group">
    
    <% @article.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert">
            <%= message %>
        </div>
    <%end-%>
    </div>
    <div class="form-group">
        <div class="row">
            <%= f.text_field :tittle, class:"form-control", placeholder: "Titulo" %>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <%= f.text_area :body, class:"form-control", placeholder: "Write the article " %>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <%= f.submit "Guardar", class:"form-control" %>
        </div>
    </div>
<%end-%>